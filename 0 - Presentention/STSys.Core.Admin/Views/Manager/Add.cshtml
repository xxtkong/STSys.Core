@{
    Layout = "~/Views/Shared/_Pop.cshtml";
}
@model STSys.Core.Admin.Application.ViewModels.ManagerViewModel
<link href="~/lib/webuploader-0.1.5/webuploader.css" rel="stylesheet" />

<section class="wrapper">
    <!-- BEGIN ROW  -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div class="panel-body">
                    <form class="form-horizontal" role="form" asp-controller="Manager" asp-action="Add" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="formSuccess">
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">账户</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="Account" class="form-control" placeholder="账户">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">姓名</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="Name" class="form-control" placeholder="姓名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">联系电话</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="Mobile" class="form-control" placeholder="联系电话">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">联系邮箱</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="Email" class="form-control" placeholder="联系邮箱">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">QQ</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="QQ" class="form-control" placeholder="QQ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">联系地址</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="Address" class="form-control" placeholder="联系地址">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">上传头像</label>
                            <div class="col-lg-10">
                                <ul class="image_ul" id="img_main_ul">
                                    <li>
                                        <img src="~/lib/webuploader-0.1.5/image.png" id="img_mainPicker" />
                                    </li>
                                </ul>
                                <div id="divUpload">
                                    <div id="btnUpload">选择图片</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-danger">保存</button>
                            </div>
                        </div>
                        <input type="hidden" asp-for="PicUrl" />
                    </form>
                </div>
            </section>
        </div>
    </div>
    <!-- END ROW  -->
</section>
@section Scripts
{
    <script src="~/js/st.upload.js"></script>
    <script>
        $(function () {
            $("#btnUpload").upload({
                ele: "divUpload", success: function (file, data) {
                    if (data.d) {
                        $("#img_mainPicker").attr("src", data.msg);
                        $("#PicUrl").val(data.msg);
                    }
                }, error: function () {
                    alert("上传失败");
                }
            });
        });
    </script>
}
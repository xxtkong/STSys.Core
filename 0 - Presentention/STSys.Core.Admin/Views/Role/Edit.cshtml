@{
    Layout = "~/Views/Shared/_Pop.cshtml";
}
@model STSys.Core.Admin.Abstractions.Entities.RoleEntity
<style>
    .layui-layer-rim {
        border: 1px solid;
    }
</style>
<section class="wrapper">
    <!-- BEGIN ROW  -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div class="panel-body">
                    <form class="form-horizontal" role="form" asp-controller="Role" asp-action="Add" data-ajax="true" data-ajax-method="post" data-ajax-success="formSuccess">
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">角色名称</label>
                            <div class="col-lg-10">
                                <input type="text" asp-for="Name" class="form-control" placeholder="角色名称">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-danger">保存</button>
                            </div>
                        </div>
                        <input  type="hidden" asp-for="Id"/>
                    </form>
                </div>
            </section>
        </div>
    </div>
    <!-- END ROW  -->
</section>

@section Scripts
    {

}
